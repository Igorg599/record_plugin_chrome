{
  "manifest_version": 3,
  "name": "The Best Recording Plugin",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "html/popup.html",
        "js/popup.js",
        "libs/html2canvas.min.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ]
}